{
  "name": "eq-author-api",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn start-app",
    "lint": "eslint .",
    "test": "jest .",
    "start-app": "nodemon --inspect=0.0.0.0:5858",
    "start-db": "docker run -ti sta-p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=mysecretpassword -e POSTGRES_DB=postgres --name postgres-db --rm postgres",
    "stop-db": "docker stop postgres-db",
    "knex": "knex --knexfile config/knexfile.js --cwd ."
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "colors": "^1.1.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "graphql": "^0.9.6",
    "graphql-relay": "^0.5.2",
    "graphql-server-express": "^0.9.0",
    "graphql-tools": "^1.1.0",
    "jest": "^20.0.4",
    "jest-environment-node-debug": "^2.0.0",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "nodemon": "^1.11.0",
    "pg": "^6.2.3",
    "pg-hstore": "^2.3.2"
  },
  "engines": {
    "node": ">=7.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "setupTestFrameworkScriptFile": "./tests/setup.js"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-author": "https://github.com/ONSdigital/eslint-config-author",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-jasmine": "^2.6.2",
    "eslint-plugin-jest": "^20.0.3"
  }
}
