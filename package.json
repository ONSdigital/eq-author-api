{
  "name": "eq-author-api",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn start-app",
    "lint": "eslint .",
    "test": "jest .",
    "start-app": "nodemon --inspect=0.0.0.0:5858",
    "start-db": "docker run -ti sta-p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=mysecretpassword -e POSTGRES_DB=postgres --name postgres-db --rm postgres",
    "stop-db": "docker stop postgres-db",
    "knex": "knex --knexfile config/knexfile.js --cwd .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "colors": "^1.1.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "eq-author-graphql-schema": "https://github.com/ONSdigital/eq-author-graphql-schema.git#7888cea41dc1a613c10296aa83c0b0dbe57d9065",
    "express": "^4.15.3",
    "graphql": "^0.9.6",
    "graphql-relay": "^0.5.2",
    "graphql-server-express": "^0.9.0",
    "graphql-tools": "^1.1.0",
    "jest": "^20.0.4",
    "jest-environment-node-debug": "^2.0.0",
    "knex": "^0.13.0",
    "lodash": "^4.17.4",
    "nodemon": "^1.11.0",
    "pg": "^6.2.3",
    "pg-hstore": "^2.3.2"
  },
  "engines": {
    "node": ">=7.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "setupTestFrameworkScriptFile": "./tests/setup.js"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-eq-author": "^1.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  }
}
